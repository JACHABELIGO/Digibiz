<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3F3D56"
    tools:context=".ui.SignupActivity">

    <LinearLayout
        android:background="@drawable/sign_up_welcome"
        android:orientation="vertical"
        android:padding="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arvo_bold"
            android:textColor="#3F3D56"
            android:text="Welcome to DigiBiz"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:textColor="#8B7668"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start by creating an account to get access to \n all of our amazing tools"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Business name"
                android:paddingBottom="10dp"
                android:textColorHint="#3F3D56"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#FFF"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="4dp"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="#3F3D56">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:paddingBottom="10dp"
                android:textColorHint="#3F3D56"
                app:boxBackgroundColor="#FFF"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="4dp"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="#3F3D56">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:paddingBottom="10dp"
                android:textColorHint="#3F3D56"
                app:boxBackgroundColor="#FFF"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="4dp"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                app:helperText="Should be of the form +254 712 345 678"
                app:helperTextTextColor="#BFBFC3"
                app:errorEnabled="true"
                app:hintTextColor="#3F3D56">

                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/arvo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:paddingBottom="10dp"
                android:textColorHint="#3F3D56"
                app:boxBackgroundColor="#FFF"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="4dp"
                app:endIconMode="password_toggle"
                app:errorEnabled="true"
                app:hintTextColor="#3F3D56">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:paddingBottom="10dp"
                android:textColorHint="#3F3D56"
                app:boxBackgroundColor="#FFF"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="4dp"
                app:endIconMode="password_toggle"
                app:errorEnabled="true"
                app:hintTextColor="#3F3D56">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:text="Sign up"
                android:textColor="#FFF"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arvo_bold"
                android:backgroundTint="#8B7668"/>

            <TextView
                android:id="@+id/to_Login"
                android:gravity="center"
                android:textColor="#EDE7E3"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Already have an account? Log in here"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>