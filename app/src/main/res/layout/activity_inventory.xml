<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.InventoryActivity">

    <include
        android:id="@+id/toolbar_inventory"
        layout="@layout/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_below="@id/toolbar_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextIcons"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimaryText"
        app:tabIndicatorColor="@color/colorDivider"
        app:tabTextColor="@color/colorPrimaryText">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_outOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_of_stock"/>

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_below="@id/toolbar_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>