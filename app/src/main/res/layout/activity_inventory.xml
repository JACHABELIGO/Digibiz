<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_inventory"
    tools:openDrawer="start"
    tools:context=".ui.InventoryActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/inventory_nav"
        android:layout_width="wrap_content"
        app:headerLayout="@layout/nav_header_inventory"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextIcons"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimaryText"
        app:tabIndicatorColor="@color/colorDivider"
        app:tabTextColor="@color/colorPrimaryText">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_outOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_of_stock"/>

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>